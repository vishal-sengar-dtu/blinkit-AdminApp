<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the corner radii for rounded corners -->
    <corners android:radius="10dp" />

    <!-- Define the border (stroke) -->
    <stroke
        android:width="2dp"
        android:color="@color/home_border_grey" />

    <!-- Optional: Define a solid color or make it transparent -->
    <solid android:color="@color/home_light" />
</shape>