<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the corner radii for rounded corners -->
    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="16dp"
        android:bottomRightRadius="16dp" />

    <!-- Optional: Define a solid color or make it transparent -->
    <gradient
        android:angle="90"
        android:startColor="@color/toolbar_light"
        android:endColor="@color/toolbar_yellow"
        android:type="linear" />
</shape>