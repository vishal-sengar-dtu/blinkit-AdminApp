<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/login_border_grey</item>
        <item name="boxBackgroundColor">@color/login_light</item>
        <item name="hintTextColor">@color/login_text_grey</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

</resources>